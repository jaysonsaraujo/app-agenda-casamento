{
  "name": "wedding-scheduler",
  "version": "1.0.0",
  "description": "Sistema de Agendamento de Casamentos com Supabase",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss public/styles.css -o public/styles.min.css",
    "build:js": "terser src/*.js -o public/app.min.js",
    "docker:build": "docker build -t wedding-scheduler .",
    "docker:run": "docker run -p 3000:3000 --env-file .env wedding-scheduler",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"**/*.{js,json,css,html}\""
  },
  "keywords": [
    "wedding",
    "scheduler",
    "supabase",
    "postgresql",
    "easypanel"
  ],
  "author": "Parish System",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "express": "^4.18.2",
    "express-static-gzip": "^2.1.7",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.2",
    "terser": "^5.26.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/wedding-scheduler.git"
  },
  "bugs": {
    "url": "https://github.com/your-repo/wedding-scheduler/issues"
  },
  "homepage": "https://github.com/your-repo/wedding-scheduler#readme"
}
